

<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
    </div>
  </header>
  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="stats">Stats</a>
    <a class="item" data-tab="items">Cargo</a>
  </nav>
  {{!-- Sheet Body --}}
  <section class="sheet-body" style="padding-bottom:50px;">
    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
    </div>
    <div class="tab stats" data-group="primary" data-tab="stats">
    
      <div class="grid-container stat-grid">
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Full Name</h4>
          <input name="data.full_name" type="text" value="{{data.full_name}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Type</h4>
          <input name="data.type" type="text" value="{{data.type}}"/>
        </div>
        
        <div class="grid-item flexcol" >
          <label class="grid-item" >Reliability</label>
          <div class="flexrow flex-center">
            <select name="data.attributes.rel.value">
              {{#select data.attributes.rel.value}}
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="F">F</option>
                {{/select}}
            </select>
            <span class="sep"> / </span> 
            <select name="data.attributes.rel.max">
              {{#select data.attributes.rel.max}}
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="F">F</option>
                {{/select}}
            </select>
          </div>
        </div>
        
        <div class="grid-item flexcol" >
          <label class="grid-item" >Combat Speed</label>
          <div   class="flexrow flex-center">
            <input name="data.combat_speed.road" type="number" value="{{data.combat_speed.road}}"/>
            <span class="sep"> / </span> 
            <input name="data.combat_speed.offroad" type="number" value="{{data.combat_speed.offroad}}"/>
            <input name="data.combat_speed.type" type="text" value="{{data.combat_speed.type}}"/>    
          </div>        
        </div>
        
        <div class="grid-item flexcol" >
          <label class="grid-item" >Travel Speed</label>
          <div   class="flexrow flex-center">
            <input name="data.travel_speed.road" type="number" value="{{data.travel_speed.road}}"/>
            <span class="sep"> / </span> 
            <input name="data.travel_speed.offroad" type="number" value="{{data.travel_speed.offroad}}"/>
            <input name="data.travel_speed.type" type="text" value="{{data.travel_speed.type}}"/>    
          </div>        
        </div>
        
        <div class="grid-item flexcol" >
          <label class="grid-item" >Armor</label>
          <div   class="flexrow flex-center">
            <span> F: </span> 
            <input name="data.armor.front" type="number" value="{{data.armor.front}}"/>
            <span> S: </span> 
            <input name="data.armor.side" type="number" value="{{data.armor.side}}"/>
            <span> R: </span> 
            <input name="data.armor.rear" type="number" value="{{data.armor.rear}}"/>
          </div>        
        </div>
        
        <div class="grid-item flexcol" >
          <label class="grid-item" >Fuel Tank</label>
          <div class="flexrow flex-center">
            <input name="data.fuel.value" type="number" value="{{data.fuel.value}}"/>
            <span class="sep"> / </span> 
            <input name="data.fuel.max" type="number" value="{{data.fuel.max}}"/>
          </div>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Fuel Type</h4>
          <input name="data.fuel.type" type="text" value="{{data.fuel.type}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Fuel Cons</h4>
          <input name="data.fuel.cons" type="number" value="{{data.fuel.cons}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Crew</h4>
          <input name="data.crew" type="text" value="{{data.crew}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Max Cargo</h4>
          <input name="data.cargo_cap" type="number" value="{{data.cargo_cap}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Weapon Mounts</h4>
          <input name="data.weapon_mounts" type="text" value="{{data.weapon_mounts}}"/>
        </div>
        
        <div class="grid-item sub-subgrid" >
          <h4 class="item-name">Price</h4>
          <input name="data.price" type="number" value="{{data.price}}"/>
        </div>
        
      </div>
      
	  </div>
    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
    
    <div class="flexrow">
      <span>
        Cargo:{{actor.weight.cargo}}/{{actor.weight.max}}
      </span>
    </div>
    
	  {{> "systems/twilight2000v4/templates/actor/part/weapon-list.hbs" this}}
      
    {{> "systems/twilight2000v4/templates/actor/part/gear-list.hbs" this}}
		
		
      
      
      
      
    </div>
  </section>
</form>

