<div class="flexrow" style="text-align: center;align-items: center;">
  <button style="width: 0;overflow:hidden;flex-grow:2;" class="rollable" data-roll="{{this.rating}}">{{@key}}</button>
  <select style="width: 0;" name="data.attributes.{{@key}}.rating">
    {{#select this.rating}}
      <option value="A">A</option>
      <option value="B">B</option>
      <option value="C">C</option>
      <option value="D">D</option>
      {{/select}}
      </select>
  <div style="width: 0;" class="die">{{this.base_die}}</div>
</div>
