<li class="item flexrow" data-item-id="{{ this._id}}">
  <div class="item-image"><img src="{{this.img}}" title="{{this.name}}" width="24" height="24"/></div>
  <h4 class="item-name" style="flex-grow: 4;">{{this.name}}</h4>
  {{#if (comp data.version "<" "2")}}
  <span style="flex: 3 1 0px;">OLD WEAPON</span>
  {{/if}}
  {{#if (comp data.version ">=" "2")}}
  <span style="flex: 1 1 0;"> ROF</span>
  <span style="flex: 1 1 0;"> Dam</span>
  <span style="flex: 1 1 0;"> Crt</span>
  <span style="flex: 1 1 0;"> Arm</span>
  <span style="flex: 1 1 0;"> Rng</span>
  <span style="flex: 2 1 0;"> Mag</span>
  <span style="flex: 1 1 0;"> Rel</span>
  <span style="flex: 1 1 0;"> Blst</span>
  <span style="flex: 1 1 0;"> {{this.data.weight}}</span>
  
  {{/if}}
  <div class="item-controls" style="flex: 1 1 0;">
    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
  </div>
</li>