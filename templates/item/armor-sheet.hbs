<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor content=data.description.value target="data.description.value" button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">

      <div class="grid-container stat-grid">

        <div class="grid-item flexcol">
          <label class="grid-item" for="data.value.value">Value</label>
          <input class="grid-item" style="grid-column-end:span 1;" name="data.value.value" type="number"
            value="{{data.value.value}}" />
        </div>

        <div class="grid-item flexcol">
          <label class="grid-item" for="data.max.value">Max</label>
          <input class="grid-item" style="grid-column-end:span 1;" name="data.max.value" type="number" value="{{data.max.value}}" />
        </div>

        <div class="grid-item flexcol">
          <label class="grid-item" for="data.location.value">Blast</label>
          <select name="data.location.value">
            {{#select data.location.value}}
            <option value="head">Head</option>
            <option value="torso">Torso</option>
            <option value="arms">Arms</option>
            <option value="legs">Legs</option>
            {{/select}}
          </select>
        </div>

        {{> "systems/twilight2000v4/templates/item/blocks/gear-block.hbs" this}}

      </div>

    </div>
  </section>
</form>